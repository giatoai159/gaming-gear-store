{{#section "js"}}
<script src="/account/src/scripts/script.js"></script>
</script>
{{/section}}

<div class="min-height-200px">
    {{>account/page-header}}
    <div class="pd-20 card-box mb-30">
        <h4 class="text-blue h4">Add an Admin Account</h4>
        <form id="register-form" method="post" action="/account/admin/admin-acc/add">
            <div class="row">
                <!--Email-->
                <div class="col-md-4 col-sm-12">
                    <div class="form-group">
                        <label for="user_email">Email</label>
                        <input type="email" class="form-control" id="user_email" name="user_email" placeholder="Enter email" value="{{email}}">
                    </div>
                </div>
                <!--Name-->
                <div class="col-md-4 col-sm-6">
                    <div class="form-group">
                        <label for="user_name">Name</label>
                        <input type="text" class="form-control" id="user_name" name="user_name" placeholder="Enter name" value="{{name}}">
                    </div>
                </div>
                <!--Phone-->
                <div class="col-md-4 col-sm-6">
                    <div class="form-group">
                        <label for="user_phone">Phone</label>
                        <input type="text" class="form-control" id="user_phone" name="user_phone" placeholder="Enter phone number" value="{{phone}}">
                    </div>
                </div>
            </div>
            <div class="row">
                <!--Address-->
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="user_address">Address</label>
                        <input type="text" class="form-control" id="user_address" name="user_address" placeholder="Enter address" value="{{address}}">
                    </div>
                </div>
            </div>
            <div class="row">
                <!--Password-->
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="user_password">Password</label>
                        <input type="password" class="form-control" id="user_password" name="user_password" placeholder="**********">
                    </div>
                </div>
                <!--Confirm Password-->
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="user_cfm_password">Confirm Password</label>
                        <input type="password" class="form-control" id="user_cfm_password" name="user_cfm_password" placeholder="**********">
                    </div>
                    
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-right">
                    <button id="submit-register" class="btn btn-primary">Next</button>
                    <p class="message" style="color:red;float:left;">{{error}}</p>
                </div>
            </div>
        </form>

    </div>
</div>