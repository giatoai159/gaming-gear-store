<!-- HEADER -->
<header>
    <!-- TOP HEADER -->
    <div id="top-header">
        <div class="container">
            <ul class="header-links pull-left">
                <li><a href="#"><i class="fa fa-phone"></i> +021-95-51-84</a></li>
                <li><a href="#"><i class="fa fa-envelope-o"></i> blackrose@email.com</a></li>
                <li><a href="#"><i class="fa fa-map-marker"></i> 227 Nguyen Van Cu</a></li>
            </ul>
            <ul class="header-links pull-right">
                {{#if user}}
                    {{#if user.role}}
                    <li><a href="/account/admin"><i class="fa fa-user-o" aria-hidden="true"></i> Admin Panel</a></li>
                    {{else}}
                    <li><a href="/account"><i class="fa fa-user-o" aria-hidden="true"></i> My Account</a></li>
                    {{/if}}
                    <li><a href="/auth/logout"><i class="fa fa-user-o" aria-hidden="true"></i> Logout</a></li>
                {{else}}
                    <li><a href="/auth/login"><i class="fa fa-user" aria-hidden="true"></i> Login</a></li>
                    <li><a href="/auth/forgot-password"><i class="fa fa-key" aria-hidden="true"></i> Forgot Password?</a></li>
                    <li><a href="/auth/register"><i class="fa fa-user-plus" aria-hidden="true"></i> Register</a></li>
                {{/if}}
            </ul>
        </div>
    </div>
    <!-- /TOP HEADER -->

    <!-- MAIN HEADER -->
    <div id="header">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!-- LOGO -->
                <div class="col-md-3">
                    <div class="header-logo">
                        <a href="/" class="logo">
                            <img src="/store/img/logo.png" alt="">
                        </a>
                    </div>
                </div>
                <!-- /LOGO -->

                <!-- SEARCH BAR -->
                <div class="col-md-6">
                    <div class="header-search">
                        <form method="get" action="/products">
                            <input id="search-box" name="search" class="input" placeholder="Search here" autocomplete="off">
                            <section id="search-result" class="hidden">
                            </section>
                            <button class="search-btn">Search</button>
                        </form>
                    </div>
                </div>
                <!-- /SEARCH BAR -->

                <!-- ACCOUNT -->
                <div class="col-md-3 clearfix">
                    <div class="header-ctn">
                        <!-- Wishlist -->
                        <div>
                            <a href="#">
                                <i class="fa fa-heart-o"></i>
                                <span>Your Wishlist</span>
                                <div class="qty">2</div>
                            </a>
                        </div>
                        <!-- /Wishlist -->

                        <!-- Cart -->
                        <div class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                                <i class="fa fa-shopping-cart"></i>
                                <span>Your Cart</span>
                                <div id="cart-qty" class="qty">{{sumQuantity cart.cartItems.rows}}</div>
                            </a>
                            <div class="cart-dropdown">
                                <div class="cart-list">
                                    {{#each cart.cartItems.rows}}
                                    <div class="product-widget">
                                        <div class="product-img">
                                            <img src="/store/img/{{'idProduct_product.thumbnail'}}">
                                        </div>
                                        <div class="product-body">
                                            <h3 class="product-name"><a href="/products/{{idProduct}}">{{'idProduct_product.name'}}</a></h3>
                                            <h4 class="product-price"><span class="qty">{{quantity}}x</span>${{'idProduct_product.price'}}</h4>
                                        </div>
                                        <button class="delete" value="{{idProduct}}"><i class="fa fa-close"></i></button>
                                    </div>
                                    {{else}}
                                    <p>No item in cart.</p>
                                    {{/each}}
                                </div>
                                <div class="cart-summary">
                                    <small id="cart-count">{{sumQuantity cart.cartItems.rows}} Item(s) selected</small>
                                    <h5 id="total-price">SUBTOTAL: ${{sumPrice cart.cartItems.rows}}</h5>
                                </div>
                                <div class="cart-btns">
                                    <a href="#">View Cart</a>
                                    <a href="/products/checkout">Checkout  <i class="fa fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        </div>
                        <!-- /Cart -->

                        <!-- Menu Toogle -->
                        <div class="menu-toggle">
                            <a href="#">
                                <i class="fa fa-bars"></i>
                                <span>Menu</span>
                            </a>
                        </div>
                        <!-- /Menu Toogle -->
                    </div>
                </div>
                <!-- /ACCOUNT -->
            </div>
            <!-- row -->
        </div>
        <!-- container -->
    </div>
    <!-- /MAIN HEADER -->
</header>
<!-- /HEADER -->